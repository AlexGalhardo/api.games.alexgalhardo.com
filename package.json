{
	"name": "api.nerdapi.com",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "npx @nestjs/cli build",
		"start": "npx nest start",
		"dev": "npx nest start --watch",
		"start:debug": "npx nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./tests/jest-e2e.json",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"format:markdown": "remark . --output",
		"format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" && npm run format:markdown",
		"prisma:migrate": "npx prisma migrate dev",
		"prisma:generate": " npx prisma generate",
		"prisma:push": "npx prisma db push",
		"prisma:studio": "npx prisma studio",
		"prisma:seed": "npx prisma db seed",
		"prisma:format": "npx prisma format",
		"prepare": "husky install"
	},
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@nestjs/common": "^10.2.6",
		"@nestjs/config": "^3.1.1",
		"@nestjs/core": "^10.2.6",
		"@nestjs/platform-express": "^10.2.6",
		"@prisma/client": "^5.3.1",
		"bcrypt": "^5.1.1",
		"dotenv": "^16.3.1",
		"google-auth-library": "^9.0.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.5",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"string-similarity": "^4.0.4",
		"stripe": "^13.8.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.1.18",
		"@nestjs/schematics": "^10.0.2",
		"@nestjs/testing": "^10.2.6",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.90",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.18",
		"@types/jest": "^29.5.5",
		"@types/jsonwebtoken": "^9.0.3",
		"@types/node": "^20.8.0",
		"@types/nodemailer": "^6.4.11",
		"@types/string-similarity": "^4.0.0",
		"@types/supertest": "^2.0.13",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"prettier": "^3.0.3",
		"prisma": "^5.3.1",
		"remark-cli": "^12.0.0",
		"remark-preset-lint-consistent": "^5.1.2",
		"remark-preset-lint-recommended": "^6.1.3",
		"remark-toc": "^9.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.2.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"modulePaths": [
			"<rootDir>"
		]
	},
	"remarkConfig": {
		"settings": {
			"bullet": "*"
		},
		"plugins": [
			"remark-preset-lint-consistent",
			"remark-preset-lint-recommended"
		]
	}
}
