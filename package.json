{
	"name": "api.nerdapi.com",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "npx @nestjs/cli build",
		"start": "npx @nestjs/cli start",
		"dev": "npx @nestjs/cli start --watch",
		"start:debug": "npx @nestjs/cli start --debug --watch",
		"start:prod": "node dist/src/main.js",
		"format": "prettier --write \"src/**/*.ts\"",
		"test": "jest",
		"test:contact": "jest contact-send-message.use-case.test.ts",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"prisma:migrate": "npx prisma migrate dev",
		"prisma:generate": "npx prisma generate",
		"prisma:push": "npx prisma db push",
		"prisma:studio": "npx prisma studio",
		"prisma:seed": "npx prisma db seed",
		"prisma:format": "npx prisma format",
		"prepare": "npx husky"
	},
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"dependencies": {
		"@fastify/static": "^7.0.4",
		"@nestjs/common": "^10.3.10",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.3.10",
		"@nestjs/platform-express": "^10.3.10",
		"@nestjs/platform-fastify": "^10.3.10",
		"@nestjs/swagger": "^7.4.0",
		"@nestjs/throttler": "^5.2.0",
		"@prisma/client": "^5.16.1",
		"bcrypt": "^5.1.1",
		"class-validator": "0.14.1",
		"dotenv": "^16.4.5",
		"google-auth-library": "^9.11.0",
		"helmet": "^7.1.0",
		"jest-mock-extended": "^3.0.7",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.14",
		"reflect-metadata": "^0.2.2",
		"remark-lint": "^10.0.0",
		"rxjs": "^7.8.1",
		"string-similarity": "^4.0.4",
		"stripe": "^16.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.10",
		"@swc/cli": "^0.4.0",
		"@swc/core": "^1.6.6",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.14.9",
		"@types/nodemailer": "^6.4.15",
		"@types/string-similarity": "^4.0.2",
		"@types/supertest": "^6.0.2",
		"husky": "^9.0.11",
		"jest": "^29.7.0",
		"prettier": "^3.3.2",
		"prisma": "^5.16.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "./",
		"testRegex": ".*\\.test\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"modulePaths": [
			"<rootDir>"
		]
	}
}
